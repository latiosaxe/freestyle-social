.user-section
  .container
    .hero
      .hero-body
        .columns
          .column.is-4.is-offset-8.white_bg
            %h2.title.is-3 Registrate
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              = devise_error_messages!

              .field
                = f.label "Correo electrónico", class: "label"
                .control
                  = f.email_field :email, autofocus: true, autocomplete: "email", class: "input"
              
              .field
                = f.label "Contraseña", class: "label"
                .control
                  = f.password_field :password, autocomplete: "off", class: "input"
                - if @minimum_password_length
                  %em.help (#{@minimum_password_length} caracteres mínimo)

              .field
                = f.label "Confirmar contraseña", class: "label"
                .control
                  = f.password_field :password_confirmation, autocomplete: "off", class: "input"

              .has-text-right
                = f.submit "Crear cuenta nueva", class: "button is-primary"

            .has-text-centered.margin-top-20
              = render "devise/shared/links"