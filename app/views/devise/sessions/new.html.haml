.user-section
  .container
    .hero
      .hero-body
        .columns
          .column.is-4.is-offset-8.white_bg
            %h2.title.is-3 Accede a tu cuenta
            = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .field
                = f.label "Correo electrónico", class: "label"
                .control
                  = f.email_field :email, autofocus: true, autocomplete: "email", class: "input"

              .field
                = f.label "Contraseña", class: "label"
                .control
                  = f.password_field :password, autocomplete: "off", class: "input"


              - if devise_mapping.rememberable?
                .field
                  .control
                    = f.label class: "checkbox" do
                      = f.check_box :remember_me
                      %span Recuérdame 

              .has-text-right
                = f.submit "Ingresar", class: "button is-primary"

            .has-text-centered.margin-top-20
              = render "devise/shared/links"